			var app = angular.module('myApp', []);
			app.controller('myCtrl', function($scope) {
				$scope.myCol = "black";
				$scope.monthlySalary = 0;
				$scope.monthlyAllowance = 0;
				$scope.other = 0;
				$scope.food = 0;
				$scope.clothing = 0;
				$scope.entertainment = 0;
				$scope.miscellaneous = 0;
				$scope.netIncome = function() {
					test = $scope.monthlySalary + $scope.monthlyAllowance + $scope.other - $scope.food - $scope.clothing - $scope.entertainment - $scope.miscellaneous;
					if (test === 0) {
						indicator.css("color", "black");
					} else if (test > 0) {
						indicator.css("color", "green");
					} else if (test < 0) {
						indicator.css("color", "red");         
					} else {
						indicator.text("-");
					}
					return test;
				};
